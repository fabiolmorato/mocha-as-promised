{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2019",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDirs": ["lib", "tests"],
    "baseUrl": "lib"
  },
  "lib": ["es2015.promise"],
  "include": ["lib"],
  "exclude": ["/tests/*/**"]
}
