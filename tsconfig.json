{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES5",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": []
}
