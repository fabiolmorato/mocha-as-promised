{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDirs": ["lib", "tests"],
    "baseUrl": "lib",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["lib", "tests"],
  "exclude": []
}
